type Author {
	id: ID!
	name: String!
	email: String!
	telephone: String
	status: Int
	age: Int
}

extend type Query {
	findAllAuthors: [Author]!
	countAuthors: Int!
	authorById(id:ID!):Author 
}

# Root
extend type Mutation {
	createAuthor(name: String!, email: String!, telephone: String, status: Int, age: Int): Author!
	softDeleteAuthorById(id: Int!): Author!
	setActiveAuthorById(id: Int!): Author!
}