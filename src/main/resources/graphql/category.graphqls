type Category {
	id: ID!
	name: String!
	status: Int
}

extend type Query {
	findAllCategories: [Category]!
	countCategories: Int!
	categoryById(id:ID!):Category 
}

# Root
extend type Mutation {
	createCategory(name: String!, status: Int!): Category!
	softDeleteCategoryById(id: Int!): Category!
	activeCategoryById(id: Int!): Category!
}